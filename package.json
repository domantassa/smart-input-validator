{
  "name": "smart-input-validator",
  "version": "1.0.0",
  "description": "An advanced form field validation system with real-time validation, visual feedback, accessibility, and localization.",
  "main": "dist/smart-validator.min.js",
  "module": "dist/smart-validator.esm.js",
  "unpkg": "dist/smart-validator.min.js",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.(js|jsx)",
      "**/?(*.)+(spec|test).(js|jsx)"
    ]
  },
  "keywords": [
    "validation",
    "form",
    "javascript",
    "real-time",
    "accessibility",
    "i18n",
    "front-end",
    "esm",
    "umd"
  ],
  "author": "Domantas Sabaliauskas <domantassabaliauskas@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "rollup": "^4.14.0",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/domantassa/smart-input-validator.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/smart-input-validator/issues"
  },
  "homepage": "https://github.com/your-username/smart-input-validator#readme"
}
